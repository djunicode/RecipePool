<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recipepool">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecipePool">
        <activity
            android:name=".screens.ProfileActivity"
            android:exported="false"
            android:parentActivityName=".screens.MainActivity"/>
        <activity
            android:name=".screens.Search"
            android:exported="false"
            android:parentActivityName=".screens.MainActivity"/>
        <activity
            android:name=".screens.SignUp"
            android:exported="true" />
        <activity
            android:name=".screens.MainActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".screens.Login"
            android:exported="true">

             <intent-filter>
             <action android:name="android.intent.action.MAIN" />


             <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter>
        </activity>
        <activity
            android:name=".screens.RecipePageActivity"
            android:exported="true"
            android:parentActivityName=".screens.MainActivity"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".screens.MainActivity"/>
    </application>

</manifest>